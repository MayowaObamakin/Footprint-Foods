<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Application themes. -->

    <style name="Theme.FootprintFoods" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="l">true</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="splashScreenTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_carrot</item>
        <item name="android:statusBarColor">@color/loginBackground</item>
        <item name="android:navigationBarColor">@color/loginBackground</item>
        <item name="android:windowLightStatusBar" tools:targetApi="l">true</item>
    </style>

    <style name="Theme.signInTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:statusBarColor">@color/loginBackground</item>
        <item name="android:navigationBarColor">@color/loginBackground</item>
        <item name="android:windowLightStatusBar" tools:targetApi="l">true</item>
    </style>

    <!-- Toolbar Styling -->

    <style name="Widget.App.Button.OutlinedButton.IconOnly" parent="Widget.MaterialComponents.Button">
        <item name="iconPadding">0dp</item>
        <item name="iconSize">28dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">52dp</item>
        <item name="android:minHeight">52dp</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <style name="Widget.App.Button.OutlinedButton.SearchBar" parent="Widget.MaterialComponents.Button">
        <item name="iconTint">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAppearance">@style/TextAppearance.FootprintFoods.Body1</item>
        <item name="backgroundTint">@color/searchBar</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <!-- Market Page Styling -->

    <style name="Widget.App.Button.OutlinedButton.SearchBar.Market" parent="Widget.MaterialComponents.Button">
        <item name="iconTint">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAppearance">@style/TextAppearance.FootprintFoods.Body1</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <!-- Text Appearance -->

    <style name="TextAppearance.FootprintFoods.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/rubik_light</item>
        <item name="android:fontFamily">@font/rubik_light</item>
        <item name="android:textSize">98sp</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>
